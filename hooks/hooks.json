{
  "hooks": [
    {
      "event": "SessionStart",
      "matcher": "startup",
      "command": "${CLAUDE_PLUGIN_ROOT}/scripts/session-start.sh",
      "timeout": 5,
      "statusMessage": "Loading Director..."
    },
    {
      "event": "SessionEnd",
      "command": "${CLAUDE_PLUGIN_ROOT}/scripts/state-save.sh",
      "timeout": 5
    }
  ]
}
